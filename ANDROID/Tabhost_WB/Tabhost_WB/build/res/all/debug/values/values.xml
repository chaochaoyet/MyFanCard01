    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="bottom_tab_font_size">16dp</dimen>
    <dimen name="bottom_tab_padding_drawable">16dp</dimen>
    <dimen name="bottom_tab_padding_up">16dp</dimen>

    <string name="action_settings">Settings</string>
    <string name="app_name">Tabhost_WB</string>
    <string name="hello_world">Hello world!</string>
    <string name="main_home">主页</string>
    <string name="main_my_info">我的资料</string>
    <string name="main_news">消息</string>
    <string name="menu_search">搜索</string>
