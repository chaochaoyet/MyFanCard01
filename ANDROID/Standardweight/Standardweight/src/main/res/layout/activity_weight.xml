<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wight0"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TextView
        android:text="计算你的标准体重"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="120dp"
        ></TextView>
    <TextView
        android:text="性 别"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="180dp"></TextView>
    <TextView
        android:text="身 高"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="240dp"></TextView>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_x="170dp"
        android:layout_y="175dp">
        <RadioButton
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sex_man"></RadioButton>
        <RadioButton
            android:text="女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sex_woman"></RadioButton>
        </RadioGroup>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="170dp"
        android:layout_y="230dp"
        android:text=""
        android:inputType="number"
        android:hint="男>160，女>140"
        android:id="@+id/height_edit"></EditText>
    <Button
        android:text="计算"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:layout_y="300dp"
        android:id="@+id/compute_button"></Button>
                </AbsoluteLayout>